{
  "name": "vimcarsop",
  "version": "1.0.0",
  "private": true,
  "proxy": "http://localhost:8888",
  "scripts": {
    "start": "parallelshell 'yarn run client:watch' 'yarn run server:watch'",
    "client:watch": "cd client && ../node_modules/.bin/react-scripts start",
    "client:build": "cd client && ../node_modules/.bin/react-scripts build",
    "client:test": "cd client && ../node_modules/.bin/react-scripts test --env=jsdom",
    "client:eject": "cd client ../node_modules/.bin/react-scripts eject",
    "lint": "eslint --fix 'client/src/**/*.js' 'server/**/*.js'",
    "precommit": "yarn run lint; yarn run prettier;",
    "precomit": "yarn run lint; yarn run prettier;",
    "prettier": "prettier --bracket-spacing --single-quote --tab-width 2 --trailing-comma all --parser flow --print-width 80  --write \"{{client/src,server,webpack},__{tests,mocks}__}/**/*.js\"",
    "server:watch": "NODE_ENV=dev PORT=8888 nodemon --exec babel-node -- ./server/",
    "server:start": "NODE_ENV=production PORT=8888 babel-node ./server/",
    "postinstall": "./scripts/linkDevDependencies.sh"
  },
  "engines": {
    "node": "7.2.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "body-parser": "^1.17.2",
    "cors": "^2.8.3",
    "express": "^4.15.3",
    "helmet": "^3.6.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.1",
    "redux": "^3.6.0",
    "redux-devtools-extension": "^2.13.2",
    "redux-thunk": "^2.2.0",
    "styled-components": "^2.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-config-react-app": "^1.0.4",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "flow": "^0.2.3",
    "flow-bin": "^0.47.0",
    "flow-typed": "^2.1.2",
    "husky": "^0.13.4",
    "nodemon": "^1.11.0",
    "parallelshell": "^2.0.0",
    "prettier": "^1.4.2",
    "react-scripts": "^1.0.7"
  }
}
